<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

    <TextView android:id="@+id/range_list_name"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:ellipsize="end"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toStartOf="@id/range_list_distance"
              tools:text="Persimmon Ridge - Golf Academy" />

    <TextView android:id="@+id/range_list_location"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:ellipsize="end"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/range_list_name"
              app:layout_constraintEnd_toStartOf="@id/range_list_distance"
              tools:text="Louisville, KY" />

    <TextView android:id="@+id/range_list_distance"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAlignment="viewEnd"
              android:layout_marginStart="16dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              tools:text="2.3 Miles" />

</androidx.constraintlayout.widget.ConstraintLayout>